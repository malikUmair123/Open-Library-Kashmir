<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            <a href="@Url.Action("Index", "Home")" class="navbar-brand">
                <img src="~/Content/Images/logo.png" title="OLK" alt="OLK" style="max-width: 35px; height: auto;" />
            </a>
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Donation", "Donation", "Donation", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Support", "Support", "Support", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("About", "About", "About", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Contact", new { area = "" }, new { @class = "nav-link" })</li>
                    @if (User.IsInRole("Admin") || User.IsInRole("SuperAdmin"))
                    {
                        <li>@Html.ActionLink("Books", "Import", "Books", new { area = "" }, new { @class = "nav-link" })</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
                <!--@if (Request.IsAuthenticated)
                {
                    <a href="@Url.Action("UserDetails", "Account")" class="navbar-brand">
                        <img src="~/Content/Images/profile-user-color.png" title="User Details" alt="User Details" style="max-width: 32px; height: auto;" />
                    </a>
                }
                else
                {
                    <a href="@Url.Action("Login", "Account")" class="navbar-brand">
                        <img src="~/Content/Images/profile-user.png" title="User Details" alt="User Details" style="max-width: 32px; height: auto;" />
                    </a>

                }-->
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - OLK Foundation</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
