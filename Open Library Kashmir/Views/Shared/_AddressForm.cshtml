    @model Open_Library_Kashmir.Models.RecipientViewModel

    <div class="form-group row mb-3">
        @Html.LabelFor(model => model.Address.Country, htmlAttributes: new { @class = "col-md-2 col-form-label" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.Address.Country, new SelectList(new List<string>(), Model.Address.Country), "Select Country", new { @class = "form-control", id = "country-dropdown" })
            @Html.TextBoxFor(model => model.Address.CountryOther, new { id = "country-textbox", @class = "form-control", @style = "display:none;" })
            @Html.ValidationMessageFor(model => model.Address.Country, "", new { @class = "text-danger" })
            <input type="hidden" id="countrydefault" value="@Model.Address.Country" />
        </div>
    </div>

