@model Open_Library_Kashmir.Models.EditUserViewModel
@{
    ViewBag.Title = "Edit";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
</hgroup>

@using (Html.BeginForm("Edit", "UsersAdmin", FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    @Html.Hidden("UserId", @Model.UserId)

    <fieldset class="form-horizontal">
        <legend>Edit a user.</legend>
        <div class="control-group">
            @Html.LabelFor(m => m.FirstName, new { @class = "control-label" })
            <div class="controls">
                @Html.TextBoxFor(m => m.FirstName)
            </div>
        </div>
        <div class="control-group">
            @Html.LabelFor(m => m.LastName, new { @class = "control-label" })
            <div class="controls">
                @Html.TextBoxFor(m => m.LastName)
            </div>
        </div>
        <div class="control-group">
            @Html.LabelFor(m => m.Email, new { @class = "control-label" })
            <div class="controls">
                @Html.TextBoxFor(m => m.Email)
            </div>
        </div>
        <div class="control-group">
            @Html.LabelFor(m => m.PhoneNumber, new { @class = "control-label" })
            <div class="controls">
                @Html.TextBoxFor(m => m.PhoneNumber)
            </div>
        </div>
        <h4>Modify Role for User</h4>
        <hr />
        @Html.DropDownList("RoleId", "No Roles")
        <div class="form-actions no-color">
            <input type="submit" value="Edit" class="btn" />
        </div>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}