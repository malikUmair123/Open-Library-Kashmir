@model Open_Library_Kashmir.Models.Book
@using Open_Library_Kashmir.Helpers
@using Open_Library_Kashmir.Models

<main aria-labelledby="title">

    @using (Html.BeginForm("EditBook", "Donation", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
